{
  "version": "1.0.48",
  "name": "@jetplane/velocity-tools",
  "description": "Velocity tools",
  "author": "WolfRayet",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jetplane/velocity-tools.git"
  },
  "module": "dist/velocity-tools.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "engines": {
    "node": ">=16",
    "npm": ">=9.5"
  },
  "scripts": {
    "build": "vite build",
    "start": "rollup -c -w",
    "test": "jest",
    "publish-patch": "npm run build && npm version patch && npm publish"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ]
  },
  "peerDependencies": {
    "react": "17.x || 18.x",
    "react-dom": "17.x || 18.x"
  },
  "browser": {
    "@emurgo/cardano-message-signing-nodejs": "@emurgo/cardano-message-signing-browser",
    "@emurgo/cardano-serialization-lib-nodejs": "@emurgo/cardano-serialization-lib-browser"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "8.4.0",
    "@typescript-eslint/eslint-plugin": "5.36.1",
    "@typescript-eslint/parser": "5.36.1",
    "@types/react": "18.0.10",
    "@types/react-dom": "18.0.5",
    "husky": "8.0.1",
    "rollup": "2.79.0",
    "tslib": "2.4.0",
    "vite": "3.1.4",
    "vite-plugin-eslint": "1.8.1",
    "vite-plugin-wasm": "2.1.0",
    "@vitejs/plugin-react": "2.2.0",
    "vitest": "0.22.1"
  },
  "keywords": [
    "react",
    "react hooks",
    "typescript",
    "npm"
  ],
  "dependencies": {
    "@emurgo/cardano-message-signing-browser": "1.0.1",
    "@emurgo/cardano-message-signing-nodejs": "1.0.1",
    "@emurgo/cardano-serialization-lib-browser": "11.3.0",
    "@emurgo/cardano-serialization-lib-nodejs": "11.3.0",
    "@emurgo/cip14-js": "3.0.1",
    "axios": "0.27.2",
    "bip39": "3.0.4",
    "nanoid": "3.3.4",
    "prop-types": "^15.7.2",
    "zod": "3.19.1",
    "@meshsdk/core": "^1.5.2",
    "@meshsdk/react": "^1.1.7"
  }
}
